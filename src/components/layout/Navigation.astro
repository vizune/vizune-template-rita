---
import { NavigationLink } from '@/components';

const nav = [
  { page: "Home",       link: "/" },
  { page: "Avatars",    link: "/avatars" },
  { page: "Renders",    link: "/renders" },
  { page: "PSD downloads", link: "/psd" },
